<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:beans="http://www.springframework.org/schema/beans"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>main.controllers.HelloServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>main.controllers.LoginServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ListServlet</servlet-name>
    <servlet-class>main.controllers.ListServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>StudentServlet</servlet-name>
    <servlet-class>main.controllers.StudentServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Main</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Main</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>WhiteFilter</filter-name>
    <filter-class>main.controllers.filters.WhileList</filter-class>
  </filter>
  <filter>
    <filter-name>springSecurityFilterChain</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>WhiteFilter</filter-name>
    <url-pattern>/listStudents</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>springSecurityFilterChain</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


  <servlet-mapping>
    <servlet-name>ListServlet</servlet-name>
    <url-pattern>/listStudents</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StudentServlet</servlet-name>
    <url-pattern>/student</url-pattern>
  </servlet-mapping>

  <listener>
  <listener-class>main.controllers.listeners.AppStartListener</listener-class>
</listener>

  <listener>
    <listener-class>main.controllers.listeners.MySessionListener</listener-class>
  </listener>

  <listener>
    <listener-class>main.controllers.listeners.MyRequestListener</listener-class>
  </listener>


    <class="com.seostella.spring.interceptor.StatsInterceptor" />
    <!--<interceptor>-->

      <!--<mapping path="/list" />-->
      <!--<beans:bean-->
              <!--class="main.util.InterceptorUser" />-->
    <!--</interceptor>-->

  
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>WEB-INF/Main-servlet.xml</param-value>
  </context-param>

  <context-param>
    <param-name>ADMIN_EMAIL</param-name>
    <param-value>innostc@gmail.com</param-value>
  </context-param>

</web-app>
